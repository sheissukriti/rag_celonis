# Customer Support RAG Assistant - Environment Configuration
# Copy this file to .env and modify as needed

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=1

# Ollama Configuration
OLLAMA_HOST=http://localhost:11434
OLLAMA_MODEL=mistral

# Embedding Model
EMBEDDING_MODEL=sentence-transformers/all-MiniLM-L6-v2

# Dataset Configuration
DATASET_NAME=MohammadOthman/mo-customer-support-tweets-945k
MAX_DOCUMENTS=10000

# Retrieval Configuration
RETRIEVER_TYPE=faiss_tfidf
TOP_K=10
TOP_K_CONTEXT=5
USE_RERANKER=true

# Generation Configuration
MAX_TOKENS=512
TEMPERATURE=0.7

# Logging Configuration
LOG_LEVEL=INFO
LOG_RESPONSES=true
LOG_FILE=logs/responses.jsonl

# Cache Configuration
ENABLE_CACHE=true
CACHE_TTL=1800

# File Paths
INDEX_PATH=store/faiss.index
QA_TEXTS_PATH=store/qa_texts_10k.jsonl
INPUT_TEXTS_PATH=store/input_texts.jsonl

# Development/Production Mode
ENVIRONMENT=development
